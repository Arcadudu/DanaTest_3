<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/on_reward_remove_information_note_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/information_note_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="INFO" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/information_note_icon"
        app:layout_constraintBottom_toBottomOf="@id/information_note_icon"
        app:layout_constraintStart_toEndOf="@id/information_note_icon"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/dt3_brand_70"
        android:text="Внимание"
        android:textSize="14dp"
        android:textStyle="bold"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/information_note_icon"
        app:layout_constraintStart_toStartOf="@id/information_note_icon"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_light"
        android:textStyle="bold"
        android:text="При изменении/добавлении\ пары - результаты пройденных тестов будут сброшены"
        android:textSize="13sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>