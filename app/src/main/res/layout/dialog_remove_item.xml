<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dt3_main_light_grey_100"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_remove_dialog_title"
            android:textAppearance="@style/TextAppearance.dt_widgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:text="itemName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_remove_dialog_message"
            style="@style/TextStyle_bs_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/remove_dialog_message"
            android:textColor="@color/plt_subtext_grey"
            app:layout_constraintStart_toStartOf="@id/tv_remove_dialog_title"
            app:layout_constraintTop_toBottomOf="@id/tv_remove_dialog_title" />

        <!--positive button-->
        <Button
            android:id="@+id/btn_remove_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Удалить"
            android:textColor="@color/dt3_error_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_remove_dialog_message" />

        <!--negative button-->
        <Button
            android:id="@+id/btn_cancel_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отмена"
            app:layout_constraintEnd_toStartOf="@id/btn_remove_pair"
            app:layout_constraintTop_toTopOf="@id/btn_remove_pair" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>