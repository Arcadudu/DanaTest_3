<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.TextInputLayout" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dt3_brand_100</item>

    </style>

    <style name="TextAppearance.dt_pairsetItemTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/dt3_on_surface_70</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.dt_dialogTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/dt3_on_surface_70</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.dt_itemTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/dt3_on_surface_70</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.dt_widgetTitle" parent="TextAppearance.dt_itemTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.dt_textButtonTextStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.dt_subtitleTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dt3_hint_color_50</item>
    </style>

    <style name="TextAppearance.dt_dialogSubtitleMessageStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dt3_hint_color_50</item>
    </style>

    <style name="dt_QuestCardTextStyle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">28sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dt3_on_brand_100</item>
    </style>

    <style name="dt_answerCardTextStyle" parent="dt_QuestCardTextStyle">
        <item name="android:textSize">24sp</item>
    </style>


</resources>