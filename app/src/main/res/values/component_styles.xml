<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dt_CardViewStyle_listItem" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardElevation">0.5dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="dt_BottomNavigationStyle" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="elevation">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconSize">26dp</item>
        <item name="itemIconTint">@color/item_navigation_colorset</item>
        <item name="itemRippleColor">@color/dt3_highlight_violet</item>
        <item name="itemTextColor">@color/item_navigation_colorset</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="dt_EditTextStyle_searchField">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:drawableStart">@drawable/icon_search_grey</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/dt3_hint_color_black_50</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dt_FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/icon_add_white</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">2dp</item>
        <item name="fabSize">mini</item>
        <item name="rippleColor">@color/dt3_on_brand_white</item>
    </style>

    <style name="dt_TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="counterEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout</item>
    </style>

    <style name="dt_TextInputEditText">
        <item name="android:paddingTop">32dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/dt3_on_main_almost_black</item>
    </style>

</resources>