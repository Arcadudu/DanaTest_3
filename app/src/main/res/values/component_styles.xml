    <style name="dt_EditTextStyle_searchField">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:drawableStart">@drawable/icon_search_grey</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/dt3_hint_color_50</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dt_FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/icon_add_white</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">2dp</item>
        <item name="fabSize">mini</item>
        <item name="rippleColor">@color/dt3_on_brand_100</item>
    </style>

    <style name="dt_TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/dt3_surface_100</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="counterEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout</item>
    </style>

    <style name="dt_TextInputEditTextStyle">
        <item name="android:paddingTop">32dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">text</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/dt3_on_main</item>
    </style>

    <style name="dt_TextButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/dt3_brand_100</item>
        <item name="android:textAppearance">@style/TextAppearance.dt_textButtonTextStyle
        </item>
    </style>

    <style name="dt_ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="elevation">0dp</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.dt_widgetTitle</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_dialog_popup</item>
    </style>

    <!--    <style name="dt_PopUpMenuStyle" parent="Theme"></style>-->

</resources>