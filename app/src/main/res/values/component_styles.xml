<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dt_CardViewStyle_listItem" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardElevation">0.3dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">@color/dt3_highlight_20</item>
    </style>

    <style name="dt_EditTextStyle_searchField">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:drawableStart">@drawable/icon_search_grey</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/dt3_hint_color_50</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dt_FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/icon_add_white</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">2dp</item>
        <item name="fabSize">normal</item>
        <item name="rippleColor">@color/dt3_on_brand_100</item>
    </style>

    <style name="dt_TextInputLayoutFilledStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/dt3_surface_100</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="counterEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/dt3_brand_100</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout</item>
    </style>

    <style name="dt_TextInputLayoutOutlinedStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="boxStrokeColor">@color/dt3_brand_70</item>


    </style>

    <style name="dt_TextInputEditTextStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:inputType">text</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/dt3_on_main</item>
        <item name="android:gravity">bottom|start</item>
    </style>

    <style name="dt_DialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/dt3_surface_100</item>
        <item name="rippleColor">@color/dt3_highlight_20</item>
        <item name="android:textColor">@color/dt3_brand_100</item>
        <item name="android:textAppearance">@style/TextAppearance.dt_textButtonTextStyle
        </item>
    </style>


    <style name="dt_variantCardButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/answer_card_color_state</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/dt3_brand_50</item>
        <item name="android:textAppearance">@style/dt_answerCardTextStyle</item>
    </style>


    <style name="dt_ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="elevation">0dp</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.dt_widgetTitle</item>
    </style>


    <style name="dt_CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_dialog_popup</item>
    </style>


</resources>